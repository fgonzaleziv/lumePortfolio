
  {% for post in postslist | reverse %}
<div class="col-md-10">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col-md-7 p-4 d-flex flex-column position-static">
          <h3 class="mb-0">{{ post.data.title }}</h3>
          <div class="mb-1 text-muted">{{ post.data.url }}</div>
          <p class="card-text mb-auto">{{ post.templateContent | excerpt | safe  }}</p>
          <a href="{{ post.url }}" class="stretched-link">Continue reading</a>
        </div>
        <div class="col-5 d-none d-lg-block">
         {% image './src/'+post.data.screen, post.data.screen,"343", "card-img" %}

        </div>
      </div>
    </div>
  {% endfor %}
